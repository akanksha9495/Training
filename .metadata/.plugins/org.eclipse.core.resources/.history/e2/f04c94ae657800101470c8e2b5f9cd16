package com.sutherland.aadhar.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.sutherland.aadhar.entity.AadharDetails;
import com.sutherland.loan.repo.AadharDetailsRepo;

@Service
public class AadharDetailsServiceImpl implements AadharDetailsService {
    
    @Autowired
    AadharDetailsRepo repo;

    @Override
    public int registerAadhar(AadharDetails details) {
        repo.save(details);
        return details.getId();
    }

    @Override
    public List<AadharDetails> findAll() {
        return repo.findAll();
    }

    @Override
    public AadharDetails findByAadharNumber(String aadharNumber) {
        Optional<AadharDetails> details = repo.findByAadharNumber(aadharNumber);
        return details.orElse(null);
    }
}
