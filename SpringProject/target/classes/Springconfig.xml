<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    
    <bean id="std" class="Core.Student"> 
   <!-- <constructor-arg name="regno" value="404"></constructor-arg>
    <constructor-arg name="stdname" value="james gosling"></constructor-arg>  -->
      <property name="regno" value="101"></property>
     <property name="stdname" value="sutherland"></property>
   </bean> 
    <bean id="empl" class="Core.Employee"> 
   <property name="code" value="345"></property>
     <property name="empname" value="Rod Jhonson"></property>
        <property name="Salary" value="5000"></property>
     <property name="addr" ref="address"></property>
   </bean> 
  <bean id="address" class="Core.Address">
  <property name="City" value="Hyderabad"></property></bean>
</beans>
